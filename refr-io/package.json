{
  "name": "refr-io",
  "version": "1.0.0",
  "description": "A minimal, modern web application to share referral links.",
  "main": "server.js",
  "scripts": {
    "build:css": "npx tailwindcss -i ./src/input.css -o ./public/style.css",
    "watch:css": "npx tailwindcss -i ./src/input.css -o ./public/style.css --watch",
    "start": "node server.js",
    "start:dev": "npx nodemon server.js",
    "dev": "npx concurrently \"npm:watch:css\" \"npm:start:dev\""
  },
  "dependencies": {
    "@aws-sdk/client-cognito-identity-provider": "^3.840.0",
    "aws-amplify": "^6.15.3",
    "aws-jwt-verify": "^5.1.0",
    "better-sqlite3": "^11.10.0",
    "cors": "^2.8.5",
    "dotenv": "^17.0.1",
    "express": "^4.21.2"
  },
  "devDependencies": {
    "@tailwindcss/forms": "^0.5.7",
    "autoprefixer": "^10.4.19",
    "concurrently": "^8.2.2",
    "nodemon": "^3.1.4",
    "postcss": "^8.4.38",
    "tailwindcss": "^3.4.4"
  },
  "author": "",
  "license": "ISC"
}
